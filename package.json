  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./abi/*": {
      "default": "./dist/abi/*"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "npx hardhat compile",
    "node": "npx hardhat node",
    "deploy:bank": "npx hardhat run hardhat/deploy-bank.js --network localhost",
    "deploy:erc20": "npx hardhat run hardhat/deploy-erc20.js --network localhost",
    "build:ts": "tsup",
    "build:abi": "mkdir -p dist/abi && cp -R src/abi/* dist/abi/",
    "build": "npm run build:ts && npm run build:abi",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
